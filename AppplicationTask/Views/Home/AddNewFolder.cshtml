@{
    ViewData["Title"] = "Add new folder";
}

@model FolderViewModel

<div asp-validation-summary="All" class="display-5 text-center text-danger"></div>

<form asp-action="AddNewFolder" asp-controller="Home">
    <input type="hidden"  asp-for="ParentFolderId" />
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger" />
    <button type="submit" class="btn btn-outline-primary p-3 my-3">Add folder(s)</button>
</form>
